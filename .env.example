# Render Configuration
# Build Command: npm run render-build
# Start Command: npm start

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database
REDIS_URL=redis://username:password@hostname:port

# Server Configuration
PORT=10000
NODE_ENV=production
API_VERSION=v1

# CORS Configuration
FRONTEND_URL=https://playchacha.vercel.app
ALLOWED_ORIGINS=https://playchacha.vercel.app,https://playchacha.net

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Sports Data API
SPORTS_API_KEY=your_sports_api_key_here
SPORTS_API_URL=https://api.sportsdata.io/v3

# Payment Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key_here
FROM_EMAIL=noreply@playchacha.net
FROM_NAME=PlayChaCha

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/tmp/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Monitoring
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Feature Flags
ENABLE_LIVE_BETTING=true
ENABLE_CRYPTO_PAYMENTS=true
ENABLE_GEOLOCATION=true
ENABLE_PUSH_NOTIFICATIONS=true

# External Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Analytics
MIXPANEL_TOKEN=your_mixpanel_token_here
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *

# Health Check
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=30000

